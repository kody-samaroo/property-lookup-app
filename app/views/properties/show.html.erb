<div class="property-main-photo" style="background-image:url('<%= property_photo(@property)%>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-6">
  <div class="row">
    <div class="row">
      <div class="col-6">
        <p class="mb-0"><%= @property.address %></p>
        <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %></p>
      </div>
      <div class="col-6 text-center">
        <div class="row mr-3 bg-light p-3">
        <div class="col-4">
          <p class="mb-0"><strong>Bedrooms</strong></p>
          <span class="lead"><%= @property.rooms %></span>
        </div>
        <div class="col-4">
          <p class="mb-0"><strong>Bathrooms</strong></p>
          <span class="lead"><%= @property.bathrooms %></span>
        </div>
        <div class="col-4">
          <p class="mb-0"><strong>Square Footage</strong></p>
          <span class="lead"><%= @property.sqft %> ft</span>
        </div>
      </div>
      </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <strong><%= link_to "Est. Monthly Repayments of #{number_to_currency((@property.price / 360), precision: 0)}", "#", class: "text-success"%></strong>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col">
      <p class="h3">Property Description</p>
      <p class="h4"><%= @property.name %></p>

        <%= simple_form  @property.details %>

        <p>
          <strong>Address:</strong>
          <%= @property.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Rooms:</strong>
          <%= @property.rooms %>
        </p>

        <p>
          <strong>Bathrooms:</strong>
          <%= @property.bathrooms %>
        </p>

        <p>
          <strong>Sqft:</strong>
          <%= @property.sqft %>
        </p>
      </div>

      <div class="col-4">
        <%= render "properties/agent_details" %>
      </div>
    </div>
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-success" %>
</div>

