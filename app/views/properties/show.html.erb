<div class="property-main-photo" style="background-image:url('<%= property_banner_photo(@property)%>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2 mb-3">
            <% if @property.for_sale? %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Sale" %>
            <% else %>
              <%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For Rent" %> / month
            <% end %>
          </p>
        </div>
        <div class="col-lg-6 text-center">
          <div class="row mr-lg-3 mt-sm-3 bg-light p-3">
            <div class="col-4">
              <p class="mb-0"><strong>Bedrooms</strong></p>
              <i class="fa-solid fa-bed"></i>
              <span class="lead"><%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="mb-0"><strong>Bathrooms</strong></p>
              <i class="fa-solid fa-bath"></i>
              <span class="lead"><%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="mb-0"><strong>Sq Foot</strong></p>
              <i class="fa-regular fa-building"></i>
              <span class="lead"><%= @property.sqft %> ft</span>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <% if @property.for_sale? %>
            <strong><%= link_to "Est. Monthly Repayments of #{number_to_currency((@property.price / 360), precision: 0)}", "#", class: "text-success"%></strong>
          <% else %>
            <strong>Available <%= render plain: set_datetime(@property) %> </strong> 
          <% end %>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
      </div>

    <div class="row">
      <div class="col">
      <p class="h3"><%= @property.name %></p>
      <p class="h4">Property Description</p>

      <div id="prop-details">
        <%= simple_format  @property.details %>

        <p>
          <strong>Address:</strong>
          <%= @property.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Rooms:</strong>
          <%= @property.rooms %>
        </p>

        <p>
          <strong>Bathrooms:</strong>
          <%= @property.bathrooms %>
        </p>

        <p>
          <strong>Sqft:</strong>
          <%= @property.sqft %>
        </p>
      </div>

      <button id="toggleDetails" class="btn btn-outline-info mt-3">Show more</button>
      </div>
      

      <div class="col-sm-4">
        <%= render "properties/agent_details" %>
      </div>
    </div>
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-success" %>
</div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <%= render "properties/list_properties", properties: @agent_properties %> 
    </div>
  </div>
</section>