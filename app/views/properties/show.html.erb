<div class="property-main-photo" style="background-image:url('<%= property_photo(@property)%>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-6">
  <div class="row">
    <div class="row">
      <div class="col-6">
        <p class="mb-0"><%= @property.address %></p>
        <p class="h2">For Sale</p>
      </div>
      <div class="col-6 text-center bg-light p-3">
        <div class="row">
        <div class="col-4">
          <p class="mb-0"><strong>Bedrooms</strong></p>
          <span class="lead"><%= @property.rooms %></span>
        </div>
        <div class="col-4">
          <p class="mb-0"><strong>Bathrooms</strong></p>
          <span class="lead"><%= @property.bathrooms %></span>
        </div>
        <div class="col-4">
          <p class="mb-0"><strong>Square Footage</strong></p>
          <span class="lead"><%= @property.sqft %></span>
        </div>
      </div>

      
      </div>
    </div>
    <div class="row">
      <div class="col">
        <p>
          <strong>Name:</strong>
          <%= @property.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @property.address %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= @property.price %>
        </p>

        <p>
          <strong>Rooms:</strong>
          <%= @property.rooms %>
        </p>

        <p>
          <strong>Bathrooms:</strong>
          <%= @property.bathrooms %>
        </p>

        <p>
          <strong>Sqft:</strong>
          <%= @property.sqft %>
        </p>
      </div>

      <div class="col-4">
        <%= render "properties/agent_details" %>
      </div>
    </div>
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-success" %>
</div>

