<div class="property-main-photo" style="background-image:url('<%= property_photo(@property)%>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container mt-6">
  <div class="row">
    <div class="col">

      <p>
        <strong>Name:</strong>
        <%= @property.name %>
      </p>
      <p>
        <strong>Address:</strong>
        <%= @property.address %>
      </p>

      <p>
        <strong>Price:</strong>
        <%= @property.price %>
      </p>

      <p>
        <strong>Rooms:</strong>
        <%= @property.rooms %>
      </p>

      <p>
        <strong>Bathrooms:</strong>
        <%= @property.bathrooms %>
      </p>

      <p>
        <strong>Sqft:</strong>
        <%= @property.sqft %>
      </p>

      </div>
    </div>
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-success" %>
</div>

