<p id="notice"><%= notice %></p>

<div class="bg-warning pb-1 bg-opacity-75 border border-secondary border-3">
    <h2 class="display-1 text-center text-light"><em> Properties </em></h2>
    <figcaption class="footer text-center text-muted">
      A list of all the properties
    </figcaption>
</div>

<table class="table table-striped mt-4 mb-5">
  <thead>
    <tr class="pb-4 bg-warning bg-opacity-10 border border-secondary border-2">
      <th>Name</th>
      <th>Address</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Bathrooms</th>
      <th>Sqft</th>
      <th colspan="3"> Controls </th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr class="bg-warning bg-opacity-10 border border-secondary border-2">
        <td class="pb-3"><%= property.name %></td>
        <td><%= property.address %></td>
        <td> $<%= number_with_precision(property.price, :precision => 2, :delimiter => ',') %></td>
        <td class="text-center"><%= property.rooms %></td>
        <td class="text-center"><%= property.bathrooms %></td>
        <td class="text-center"><%= property.sqft %></td>
        <td>
        <%= link_to property do %>
          <i id="button-link" class="fa-solid fa-magnifying-glass text-secondary"></i>
        <% end %>
        </td>
        <td>
        <%= link_to edit_property_path(property) do %>
          <i class="fa-solid fa-pen text-secondary"></i>
        <% end %>
        </td>
        <td>
        <%= link_to property, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash text-secondary"></i>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-7">
    <%= link_to 'New Property', new_property_path, class: "btn btn-warning text-white" %>
  </div>


  <div class="col-sm-5 page_pagination">
      <div class="page_info">
        <%= page_entries_info @properties %>
      </div>
    <%= will_paginate @properties, :container => false %>
  </div>

</div>

