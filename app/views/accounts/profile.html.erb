<%= @account.first_name %>
<div class="property-main-photo" style="background-image:url('<%= property_banner_photo(@property.last)%>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-lg-4">
          <p class="h4 mb-0"><%= @account.first_name + " " + @account.last_name %></p>
          <p class="mb-2"><%= @account.company %></p>
        </div>

        <div class="col-lg-6 text-center">
          <div class="row mr-lg-3 mt-sm-3 bg-light p-3">
            <div class="col-3">
              <i class="fa-solid fa-bed"></i><br/>
              <p class="mb-0"><strong><%= @properties_sold %> Sold</strong></p>
            </div>
            <div class="col-3">
              <i class="fa-solid fa-bed"></i><br/>
              <p class="mb-0"><strong><%= @properties_for_sale %> For Sale</strong></p>
            </div>
            <div class="col-3">
              <i class="fa-solid fa-bath"></i><br/>
              <span class="lead"></span><br/>
              <p class="mb-0"><strong><%= @properties_leased %> Leased</strong></p>
            </div>
            <div class="col-3">
              <i class="fa-regular fa-building"></i><br/>
              <span class="lead"></span><br/>
              <p class="mb-0"><strong><%= @properties_for_rent %> For Rent</strong></p>
            </div>
          </div>
        </div>
      </div>

      <div class="row border-top border-bottom mt-5 mb-4 pt-4 pb-4">
        <div class="col-6">
            Properties
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
      </div>

    <div class="row">
      <div class="col">
        <p class="h5">Property Description</p>

        <div id="prop-details" class="">
          <%= simple_format  @account.bio %>
        </div>

        <button id="toggleDetails" class="btn btn-outline-info mt-3">Show more</button>
      </div>
    </div>
  </div>

  <div class="col-sm-4">
    <%= render "properties/agent_details", agent: @account %>
      </div>
    </div>
      <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-success" %>
  </div>

<section class="mt-5 mb-5">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <p class="h3 mb-3">Other properties by this agent</p>
      </div>
      <%= render "properties/list_properties", properties: @property %> 
    </div>
  </div>
</section>
