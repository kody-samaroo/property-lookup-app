<p id="notice"><%= notice %></p>

<div class="bg-warning pb-1 bg-opacity-75 border border-secondary border-3">
    <h2 class="display-1 text-center text-light"><em> Announcements </em></h2>
    <figcaption class="footer text-center text-muted">
      A list of all the announcemnts and updates
    </figcaption>
</div>

<table class="table table-striped mt-4 mb-5">
  <thead>
    <tr class="pb-4 bg-warning bg-opacity-10 border border-secondary border-2">
      <th>Title</th>
      <th>Author</th>
      <th>Date</th>
      <th colspan="3">Controls</th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |new| %>
      <tr class="bg-warning bg-opacity-10 border border-secondary border-2">
        <td class="pb-3"><%= new.title %></td>
        <td><%= find_author(new) %></td>
        <td><%= find_date(new) %></td>
        <td>
        <%= link_to new do %>
          <i id="button-link" class="fa-solid fa-magnifying-glass text-secondary"></i>
        <% end %>
        </td>
        <td>
        <%= link_to edit_news_path(new)  do %>
          <i class="fa-solid fa-pen text-secondary"></i>
        <% end %>
        </td>
        <td>
        <%= link_to new, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash text-secondary"></i>
        <% end %>
        </td>      
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-7">
    <%= link_to 'Create News Announcement', new_news_path, class: "btn btn-warning text-white" %>
  </div>


  <div class="col-sm-5 page_pagination">
      <div class="page_info">
        <%= page_entries_info @news %>
      </div>
    <%= will_paginate @news, :container => false %>
  </div>

</div>
