<div class="bg-warning pb-3 bg-opacity-75 border border-secondary border-3">
    <h2 class="display-3 text-center text-light"><em> Announcements </em></h2>
</div>

<% @news.limit(10).reverse_each do |new| %>
    <div class="row pt-3" style="height: 250px;">
        <div class="col-sm-3">
            <%= news_thumbnail(new) %>
        </div>
        <div class="col-sm-9">
            <h5 id="news-title" class="fw-semibold text-decoration-underline mb-0 mt-3"> <%= new.title %> </h5>
            <span class="fs-5"> <%= link_to find_author(new), profile_path(new.account_id) %> â€¢</span> <span class="fs-7">Date Posted <%= find_date new %> </span>
            <%= simple_format displayContentShort(new), id: "news-content", class: "fw-light mb-0" %>
            <%= link_to 'Read More', news_path(new.id), class: "btn btn-sm btn-link ps-0" %>
        </div>
        <hr/>
    </div>
<% end %>

