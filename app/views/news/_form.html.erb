<%= form_with(model: news) do |form| %>
  <%= render "layouts/validation", item: @news%>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
  </div>

  <div class="actions" style="padding: 10px">
    <%= form.submit "Save", class: "btn btn-lg btn-block btn-success mb-2 mt-2" %>
  </div>

<% end %>
